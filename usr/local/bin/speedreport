# Lizenz GPL 3.0

type speedtest >/dev/null 2>&1 || ( echo -e "Speedtest not found.\nPlease install speedtest-cli from https://github.com/sivel/speedtest-cli.git"  ; exit )

MYSQLPWD='Ahsoo3feeshaeyae' # <<<< provide your password for the database user. He must able to INSERT records in the report table.

RESULT=$( speedtest-cli --csv |  sed 's#^#"#; s#,#","#g; s#"\([0-9\.]+\)"#\1#g; s#$#"#' )

SQL="INSERT INTO reports (serverID, sponsor, server, start, distance, ping, download, upload, sharename, ip) VALUES ( ${RESULT} );"


echo $SQL \
| tr -d '\n' \
| mysql -u speedreport -p$MYSQLPWD -b speedtest

